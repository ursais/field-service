<odoo>

    <record model="res.config.settings" id="res_config_settings_fsm_template">
        <field name="group_fsm_template" eval="1" />
    </record>

    <function model="res.config.settings" name="execute">
            <value eval="[ref('fieldservice_sale.res_config_settings_fsm_template')]" />
    </function>

    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="fieldservice.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="orders" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="disable_split_invoicing"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="disable_split_invoicing" string="Disable Split Invoicing"/>
                        <div class="text-muted">
                            Disable Split Invoicing
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
